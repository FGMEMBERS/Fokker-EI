<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>panel.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>panel</object-name>

    <!-- Objets transparents -->
  </animation>

  <!-- TURN -->
  <model>
    <path>Aircraft/Fokker-Eindecker-EIII/Models/Interior/Panel/Instruments/turn/turn.xml</path>
    <offsets>
      <x-m> -0.059 </x-m>
      <y-m> -0.060 </y-m>
      <z-m>  0.070 </z-m>
    </offsets>
  </model>
  
  <!-- ALT -->
  <model>
    <path>Aircraft/Fokker-Eindecker-EIII/Models/Interior/Panel/Instruments/alt/alt.xml</path>
    <offsets>
      <x-m> -0.055 </x-m>
      <y-m> -0.163 </y-m>
      <z-m>  0.035 </z-m>
    </offsets>
  </model>
  
  <!-- ASI -->
  <model>
    <path>Aircraft/Fokker-Eindecker-EIII/Models/Interior/Panel/Instruments/asi/asi.xml</path>
    <offsets>
      <x-m> -0.045 </x-m>
      <y-m>  0.047 </y-m>
      <z-m>  0.035 </z-m>
    </offsets>
  </model>
  
  <!-- RPM -->
  <model>
    <path>Aircraft/Fokker-Eindecker-EIII/Models/Interior/Panel/Instruments/rpm/tach.xml</path>
    <offsets>
      <x-m> -0.065 </x-m>
      <y-m> -0.060 </y-m>
      <z-m> -0.064 </z-m>
    </offsets>
  </model>
  
  <!-- COMPASS -->
  <model>
    <path>Aircraft/Fokker-Eindecker-EIII/Models/Interior/Panel/Instruments/compass/compass.xml</path>
    <offsets>
      <x-m>  0.048 </x-m>
      <y-m>  0.119 </y-m>
      <z-m> -0.030 </z-m>
      <pitch-deg> 30 </pitch-deg>
      <heading-deg> -50 </heading-deg>
    </offsets>
  </model>
  
</PropertyList>
