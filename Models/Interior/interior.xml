<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>aubans</object-name>
    <object-name>planchet</object-name>
    <object-name>seat</object-name>
    <object-name>axemanche</object-name>
    <object-name>manche</object-name>
    
    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Fokker-Eindecker-EIII/Models/Effects/Glass/glass</inherits-from>
    <object-name>intvitres</object-name>
  </effect>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>intvitres</object-name>
  </effect>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/Fokker-Eindecker-EIII/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.780 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.090 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Fokker-Eindecker-EIII/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.073 </x-m>
      <y-m>  0.060 </y-m>
      <z-m>  0.673 </z-m>
    </offsets>
  </model>

  <animation>
    <type>rotate</type>
    <object-name>manche</object-name>
    <property>controls/flight/elevator</property>
    <factor> 5 </factor>
    <center>
      <x-m> -1.91201 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.03899 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>manche</object-name>
    <property>controls/flight/aileron</property>
    <factor> 5 </factor>
    <center>
      <x-m> -1.91201 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.03899 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>
